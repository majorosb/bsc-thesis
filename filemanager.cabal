                        time,
                        containers,
                        vector,
                        unix,
                        process,
                        conduit,
                        ListZipper,
                        bytestring,
                        hpath-directory

executable filemanager
  main-is:             Main.hs
  ghc-options:         -threaded -Wall -Wcompat -O2 
