  -- other-extensions:
  build-depends:       base == 4.*,
  			vty,
     			text,
			brick,
   			directory,
      			filepath,
	 		lens,
                        time,
                        containers,
                        process,
                        ListZipper,
                        filemanager

  -- hs-source-dirs: src
  default-language:    Haskell2010

test-suite testFileManager
